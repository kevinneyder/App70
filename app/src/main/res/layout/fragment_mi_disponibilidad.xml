<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fr_doctores_disponibilidad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MiDisponibilidad">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/especialidades5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:srcCompat="@drawable/especialidades5">


        <TextView
            android:id="@+id/txt_disponibilidad"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:hint="@string/txt_seleccion_De_fecha"
            android:textColorHint="#fff"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="20dp" />

        <CalendarView
            android:id="@+id/calendario"
            android:layout_width="271dp"
            android:layout_height="296dp"
            android:layout_marginTop="5dp"
            android:background="#fff"


            />

        <TextView
            android:id="@+id/txt_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="10dp"
            android:hint="@string/txt_seleccion_De_medico"
            android:textColorHint="#fff"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="20dp" />

        <ListView
            android:id="@+id/lv_doctores_disponibilidad"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="#3BFFFFFF" />
    </LinearLayout>


</RelativeLayout>