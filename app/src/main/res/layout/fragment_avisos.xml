<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fr_avisos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Avisos">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/especialidades5"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:srcCompat="@drawable/especialidades5">

        <TextView
            android:id="@+id/txt_avisos"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="30dp"
            android:hint="@string/txt_avisos"
            android:textColorHint="#fff"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="20dp" />


        <TextView
            android:id="@+id/txtAvisos"
            android:layout_width="339dp"
            android:layout_height="511dp"
            android:text="la amyoria de las personas son demacioado jodidas y con e tie,po pierden un deo"
            android:background="#3BFFFFFF" />

    </LinearLayout>

</RelativeLayout>